<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.beanu.yunzaipiao.ui.more.CityListActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/searchBarContainer"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="#f8f8f8">

            <EditText
                android:id="@+id/input_search_query"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dip"
                android:background="@drawable/search_bg"
                android:drawableLeft="@drawable/ic_search"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:hint="输入城市名或拼音查询"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:paddingLeft="8dp"
                android:singleLine="true"
                android:textColorHint="#99999e"
                android:textSize="14sp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/searchBarContainer">

            <com.beanu.arad.indexableListView.IndexableListView
                android:id="@+id/listview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:cacheColorHint="#00000000"
                android:fadingEdge="none"
                android:fastScrollEnabled="false"
                android:footerDividersEnabled="true"
                android:headerDividersEnabled="true"
                android:listSelector="#00000000"
                android:smoothScrollbar="true"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
